{
  "manifest_version": 3,
  "name": "LinkedIn Job Apply URL Scraper (Triggered & Close)",
  "version": "1.0",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["*://www.linkedin.com/jobs/view/*"],
  "action": {
    "default_popup": ""
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/jobs/view/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}